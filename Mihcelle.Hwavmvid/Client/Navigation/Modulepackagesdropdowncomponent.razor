@namespace Mihcelle.Hwavmvid.Client
@inherits Mainlayoutbase

@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.AspNetCore.Http
@using Mihcelle.Hwavmvid.Client.Authentication

<AuthorizeView>
    <Authorized>

        @if (this.packages != null)
        {

            <div class="d-flex flex-wrap bg-white mt-4 py-3" style="max-width: 410px;">            

                @foreach (var package in this.packages)
                {

                    <div class="position-relative p-1" style="width: 150px; height: 150px;">
                        <button type="button" class="btn btn-light w-100 h-100 px-2 py-4 bg-light text-dark text text-centerborder border-dark rounded-0">
                            <span class="display-4">Y</span><br />
                            <small class="py-2 w-100" style="font-size: 0.8rem; position:absolute; left:0px; bottom:10px;">@package.Name.Split(',')[0].Split('.').Last()</small>
                        </button>
                    </div>

                }

            </div>

        }

    </Authorized>
</AuthorizeView>

@code {


    public List<Applicationmodulepackage> packages { get; set; }

    protected override async Task OnInitializedAsync()
    {

        var client = this.ihttpclientfactory.CreateClient("Mihcelle.Hwavmvid.ServerApi.Unauthenticated");
        this.packages = await client.GetFromJsonAsync<List<Applicationmodulepackage>>("api/modulepackage");

        await base.OnInitializedAsync();
    }

}