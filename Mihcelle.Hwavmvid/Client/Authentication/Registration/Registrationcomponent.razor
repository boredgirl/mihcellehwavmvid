@namespace Mihcelle.Hwavmvid.Client.Authentication

@inherits Authenticationbase

@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Http
@using Mihcelle.Hwavmvid.Shared.Models

@inject NavigationManager navigationmanager

<div class="registration">

    <div class="input-group mb-3">
      <span class="input-group-text" id="registration-username">@@</span>
      <input type="text" @bind-value="Applicationuser.UserName" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="registration-username">
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="registration-email">@@</span>
      <input type="text" @bind-value="Applicationuser.Email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="registration-email">
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="registration-password">@@</span>
      <input type="text" @bind-value="Applicationuser.PasswordHash" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="registration-password">
    </div>

    <button type="button" @onclick="async () => await applicationprovider.Register(Applicationuser)" class="btn btn-sm btn-primary">Send data</button>

</div>

@code {

    public Applicationuser Applicationuser { get; set; } = new Applicationuser();

    protected override Task OnInitializedAsync()
    {
        this.Applicationuser.EmailConfirmed = true;
        this.Applicationuser.TwoFactorEnabled = false;
        this.Applicationuser.LockoutEnabled = true;

        return base.OnInitializedAsync();
    }

}
