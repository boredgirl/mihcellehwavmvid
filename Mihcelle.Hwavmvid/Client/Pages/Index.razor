@page "/"

@inherits ComponentBase

@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Microsoft.AspNetCore.Http
@using Mihcelle.Hwavmvid.Client.Authentication

@inject NavigationManager navigationmanager
@inject Applicationprovider applicationprovider
@inject AuthenticationStateProvider authenticationstateprovider

<div class="py-3">

    <h1>hello index page</h1>
    <div><small>connectionid: @applicationprovider._connection?.ConnectionId</small></div>
    <button type="button" @onclick="() => StateHasChanged()">statehaschanged()</button>

    <AuthorizeView>
        <Authorized>
            <div><small>signedin user: @_context?.User?.Identity?.Name</small></div>
        </Authorized>
        <NotAuthorized>
            not authorized..
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {

    public AuthenticationState? _context { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            this._context = await this.authenticationstateprovider.GetAuthenticationStateAsync();
            this.StateHasChanged();
        }
        
        await base.OnAfterRenderAsync(firstRender);
    }
}