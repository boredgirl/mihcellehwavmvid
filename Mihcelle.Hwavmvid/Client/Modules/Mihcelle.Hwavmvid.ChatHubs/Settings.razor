@namespace Mihcelle.Hwavmvid.Modules.ChatHubs
@inherits SettingsBase
@using System.Text.RegularExpressions
@using Mihcelle.Hwavmvid.ColorPicker

<div class="mb-3">
    <label class="form-label">Background Color</label>
    <ColorPickerComponent ContextColor="@backgroundColor" ColorPickerType="@ColorPickerType.HTML5ColorPicker"></ColorPickerComponent>
</div>

<div class="mb-3">
    <label for="maxUsernameChars" class="form-label">Maximum username characters</label>
    <input type="text" class="form-control" id="maxUsernameChars" @bind="maxUserNameCharacters">
</div>

<div class="mb-3">
    <label for="framerate" class="form-label">Video Framerate</label>
    <input type="text" class="form-control" id="framerate" @bind="framerate">
</div>

<div class="mb-3">
    <label for="videoBitsPerSecond" class="form-label">Video Bits Per Second</label>
    <input type="text" class="form-control" id="videoBitsPerSecond" @bind="videoBitsPerSecond">
</div>

<div class="mb-3">
    <label for="audioBitsPerSecond" class="form-label">Audio Bits Per Second</label>
    <input type="text" class="form-control" id="audioBitsPerSecond" @bind="audioBitsPerSecond">
</div>

<div class="mb-3">
    <label for="videoSegmentsLength" class="form-label">Video Segments Length In Milliseconds</label>
    <input type="text" class="form-control" id="videoSegmentsLength" @bind="videoSegmentsLength">
</div>

<div class="mb-3">
    <label for="geoLocationPositionInterval" class="form-label">Geolocation Position Interval In Milliseconds</label>
    <input type="text" class="form-control" id="geoLocationPositionInterval" @bind="geoLocationPositionInterval">
</div>

<div class="mb-3">
    <label for="bingMapsApiKey" class="form-label">Bing Maps Api Key</label>
    <input type="text" class="form-control" id="bingMapsApiKey" @bind="bingMapsApiKey">
</div>

<div class="mb-3">

    <label class="form-label">Regular Expressions</label>

    @foreach (var item in regularExpressions)
    {
        <div class="d-flex flex-row">
            <div><small><strong>@item</strong></small></div>
            <div><button type="button" class="btn btn-link" @onclick="@(() => RemoveRegularExpression_ClickedAsync(item))">Remove</button></div>
        </div>
    }
</div>

<div class="mb-3">
    <input type="text" class="form-control" @bind="regularExpression" placeholder="Type your regular expression.." />
    <br />
    <small class="form-text text-muted">Try this regex for youtube links: <br />(?:http?s?:\/\/)?(?:www.)?(?:m.)?(?:music.)?youtu(?:\.?be)(?:\.com)?(?:(?:\w*.?:\/\/)?\w*.?\w*-?.?\w*\/(?:embed|e|v|watch|.*\/)?\??(?:feature=\w*\.?\w*)?&?(?:v=)?\/?)([\w\d_-]{11})(?:\S+)?</small>
    <br />
    <button type="button" class="btn btn-link" @onclick="@(() => AddRegularExpression_ClickedAsync())">Add</button>
</div>

