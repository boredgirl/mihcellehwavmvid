@namespace BlazorTabs
@inherits TabContainerBase

@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<style type="text/css">

    .blazor-tab-nav::-webkit-scrollbar {
        height: 8px;
        background-color: grey;
    }

    .blazor-tab-nav {
        scrollbar-width: thin;
    }

    .ellipsis {
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }
</style>

<div id="@ElementId" class="blazor-tabs">

    <CascadingValue Value=this>

        <ul class="blazor-tab-nav nav nav-tabs d-flex flex-nowrap overflow-auto" style="overflow-y: hidden !important;">
            @ChildContent
        </ul>

    </CascadingValue>

    <div class="nav-tabs-body">
        @ActiveTab?.TabContent
    </div>

</div>

